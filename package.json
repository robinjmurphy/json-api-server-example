{
  "name": "postgres-json-api-example",
  "version": "1.0.0",
  "description": "An example JSON API server using Postgres and Express",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "start": "NODE_ENV=dev node index.js",
    "watch": "NODE_ENV=dev nodemon -e js,json",
    "coverage": "istanbul cover _mocha -- -R dot",
    "pretest": "npm run create-database && npm run create-table",
    "posttest": "npm run lint",
    "create-database": "createdb postgres-json-api-example || true",
    "create-table": "psql -d postgres-json-api-example -f db/createTable.sql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinjmurphy/postgres-json-api-example.git"
  },
  "keywords": [
    "postgres",
    "json",
    "api",
    "example"
  ],
  "author": "robin@robinmurphy.co.uk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/robinjmurphy/postgres-json-api-example/issues"
  },
  "homepage": "https://github.com/robinjmurphy/postgres-json-api-example#readme",
  "devDependencies": {
    "async": "^1.5.0",
    "eslint": "^1.10.3",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.1",
    "supertest": "^1.1.0"
  },
  "dependencies": {
    "body-parser": "^1.14.2",
    "boom": "^3.1.1",
    "boom-to-json-api": "^1.0.0",
    "express": "^4.13.3",
    "joi": "^7.1.0",
    "lodash": "^3.10.1",
    "massive": "^2.1.0",
    "qs": "^6.0.1",
    "winston": "^2.1.1"
  }
}
